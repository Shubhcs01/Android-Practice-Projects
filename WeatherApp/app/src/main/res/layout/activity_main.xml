      >

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
